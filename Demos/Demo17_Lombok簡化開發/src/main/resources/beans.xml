<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="eason" class="tw.com.springboot.bean.User">
        <property name="name" value="eason"></property>
        <property name="age" value="18"></property>
        <property name="pet" ref="cat"></property>
    </bean>

    <bean id="cat" class="tw.com.springboot.bean.Pet">
        <property name="name" value="旺財"></property>
    </bean>
</beans>